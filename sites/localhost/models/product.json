{
	"name": "product",
	"inherits": "generic.json",
	"fields": [
			{
				"name": "name",
				"type": "string",
				"length": 64,
				"validation": ["required", "string"]
			},
			{
				"name": "notes",
				"type": "string",
				"length": 65535
			},
			{
				"name": "image",
				"type": "string",
				"length": 36
			},
			{
				"name": "gallery",
				"type": "string.collection",
				"length": 36
			},
			{
				"name": "tags",
				"type": "string.collection",
				"length": 32
			},

			{
				"name": "physical",
				"type": "boolean",
				"_default": true
			},
			{
				"name": "variants",
				"type": "document.collection",
				"model": "variant.json"
			},
			{
				"name": "capacity",
				"type": "document",
				"fields": [
					{
						"name": "capacity",
						"type": "double",
						"length": 8.3,
						"validation": ["double"]
					},
					{
						"name": "units",
						"type": "string",
						"length": 16,
						"validation": ["string"]
					}
				]
			},
			{
				"name": "taxable",
				"type": "boolean",
				"_default": false
			},
			{
				"name": "handle",
				"type": "string",
				"validation": ["required", "handle"]
			},
			{
				"name": "page_title",
				"type": "string",
				"length": 64,
				"validation": ["string"]
			},
			{
				"name": "meta_description",
				"type": "string",
				"length": 128,
				"validation": ["string"]
			},
			{
				"name": "published",
				"type": "boolean",
				"_default": false
			}
		]
}
